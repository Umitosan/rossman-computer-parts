<%= render('layouts/errors', :object => @product ) %>

<%= form_for [@product] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :cost %>
  <%= f.number_field :cost, :class => 'text_field', :step => 0.01 %>
  <br><br>
  <%= f.label :country %>
  <%= f.text_field :country %>
  <br><br>
  <p><%= f.submit %></p>
<% end %>
